<style>
  .hero {
    text-shadow: white 1px 1px 5px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 800px;
    width: 100%;
    z-index: 1;
  }
  .hero::after {
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    background-image: url(/basic-site-design/images/cat_centered_wide.jpg);
    background-size: cover;
    background-position: center;
    opacity: 0.6;
    height: 800px;
    width: 100%;
    z-index: -1;
  }
  .hero-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .hero-button {
    margin-top: 2rem;
    font-family: inherit;
    font-size: 1.25rem;
    padding: 0.5rem;
    border-radius: 0.5rem;
    background-color: var(--primary-color);
    border-color:  var(--primary-color);
  }
  .hero-button:hover {
    opacity: 85%;
  }
  .description {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  .container {
    padding: 3rem;
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .benefits h2 {
    text-align: center;
    color: var(--primary-color);
  }
  .benefit-container {
    display: flex;
    justify-content: space-between;
  }
  .benefit {
    margin-top: 1rem;
    width: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .benefit-icon {
    width: 5rem;
    height: 5rem;
  }
  .benefit p {
    padding: 0 1rem;
  }
  .main-content-section {
    display: flex;
    flex-direction: column;
  }
  .main-content-section h2 {
    color: var(--primary-color);
  }
  .main-content-section p {
    line-height: 150%;
  }
  .social-proof {
    padding: 2rem;
    width: 100%;
    background-color:var(--primary-color);
    display: flex;
    justify-content: center;
  }
  .social-proof-content {
    max-width: 1000px;
  }
  .social-proof p {
    font-size: var(--emphasis-font-size);
    font-style: italic;
    font-weight: bold;
  }
  @media (max-width: 1000px)
  {
    .hero, .hero:after {
      height: 600px;
    }
  }
  @media (max-width: 750px) {
    .hero, .hero:after {
      height: 400px;
    }
  }
  @media (max-width: 600px) {
    .hero, .hero:after {
      height: 400px;
    }
    .hero {
      text-shadow: white 0px 0px 2px;
    }
    .container {
      padding-inline: 2rem;
    }
    .benefit-container {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    .benefit {
      width: 100%;
      max-width: 350px;
    }
  }
</style>
